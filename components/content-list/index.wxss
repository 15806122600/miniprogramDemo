page{
  background: #f5f5f5;
}
.item-wrap {
  margin: 20rpx;
  padding: 20rpx;
  display: flex;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 2px 2px 3px #cfcece;
}

.item-text {
  display: inline-block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.image-wrap {
  padding-left: 20rpx;
  width: 160rpx;
  height: 100rpx;
}

.item-image {
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}