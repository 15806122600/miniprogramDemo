page,
body {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}
scroll-view {
  box-sizing: border-box;
}
.data_body {
  overflow: auto;
  text-align: center;
  color: #333333;
  background-repeat: repeat;
  background-color: #ffffff;
  position: relative;
}
.charts-box {
  width: 100%;
  height: 300px;
}
/**
  图表样式
**/
.charts {
  width: 750rpx;
  height: 500rpx;
}
.content {
  padding-top: 10rpx;
}
.content .sum_operate {
  padding: 0 10rpx;
}
.content .sum_operate {
  padding: 30rpx 20rpx;
}
.content .sum_operate .title {
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 30rpx;
}
.split_line{
	width: 100%;
	height: 20rpx;
	background-color: #F0F0F0;
}